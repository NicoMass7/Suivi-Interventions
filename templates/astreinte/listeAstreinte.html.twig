{% extends 'base.html.twig' %}

{% block body %}
	<style>
		h1 {
			text-align: center;
		}
	</style>
	<br>
	<h1>
		Astreinte
	</h1>
	<br>
	<br>
	<h4>
		Recherche :
	</h4>

	<br>
	<div class="container mt-5">
		<a class="btn btn-primary" href="{{ path('create_astreinte')}}">Ajouter</a>
		<table class="table table-striped table-bordered" id="astreintesTable">
			<thead>
				<th>Catégorie</th>
				<th>Demi Journée</th>
				<th>Journée</th>
				<th>Nuit</th>
				<th>Férié</th>
				<th>Week End</th>
				<th>Semaine</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</thead>
			<tbody>
				{% if astreintes is defined %}
					{% for astreinte in astreintes %}
						<tr>
							<td>{{ astreinte.categorie }}</td>
							<td>{{ astreinte.demiJournee }}</td>
							<td>{{ astreinte.journee }}</td>
							<td>{{ astreinte.nuit }}</td>
							<td>{{ astreinte.ferie }}</td>
							<td>{{ astreinte.weekEnd }}</td>
							<td>{{ astreinte.semaine }}</td>
							<td>
								<a a href="{{ path('update_astreinte', {'id': astreinte.id})}}"
								class="btn btn-success">Update</a>
							</td>
							<td>
								<a <a href="{{ path('delete_astreinte', {'id': astreinte.id})}}"
								class="btn btn-danger">Delete</a>
							</td>
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
$('#astreinteTable').DataTable();
});
	</script>
{% endblock %}
