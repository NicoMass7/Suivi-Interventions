{% extends 'base.html.twig' %}

{% block body %}
	<style>
		h1 {
			text-align: center;
		}
	</style>
	<br>
	<h1>
		Clients
	</h1>
	<br>
	<br>
	<h4>
		Recherche :
	</h4>

	<br>
	<div class="container mt-5">
		<a class="btn btn-primary" href="{{ path('create_client')}}">Ajouter</a>
		<table class="table table-striped table-bordered" id="clientTable">
			<thead>
				<th>Nom</th>
				<th>Adresse</th>
				<th>Cp - ville</th>
				<th>Contact</th>
				<th>Téléphone</th>
				<th>Mail</th>
				<th>Modifier</th>
				<th>Supprimer</th>
			</thead>
			<tbody>
				{% if clients is defined %}
					{% for client in clients %}
						<tr>
							<td>{{ client.societe }}</td>
							<td>{{ client.adresse }}</td>
							<td>{{ client.codePostal ~ ' ' ~ client.ville }}</td>
							<td>{{ client.contact }}</td>
							<td>{{ '0' ~ client.telephone }}</td>
							<td>{{ client.mailClient }}</td>
							<td>
								<a a href="{{ path('update_client', {'id': client.id})}}"
								class="btn btn-success">Update</a>
							</td>
							<td>
								<a <a href="{{ path('delete_client', {'id': client.id})}}"
								class="btn btn-danger">Delete</a>
							</td>
							{# <td>
															<a href="{{ path('client_email',{'id': client.id})}}" class="btn btn-primary ">Email</a>
														</td> #}
						</tr>
					{% endfor %}
				{% endif %}
			</tbody>
		</table>
	</div>
{% endblock %}
{% block javascripts %}
	<script src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
	<script>
		$(document).ready(function () {
$('#clientTable').DataTable();
});
	</script>
{% endblock %}

